<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>USSD+</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>9.0</string>
	<key>CFBundleName</key>
	<string>ussd_plus</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>

	<!-- Launch Configuration -->
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>

	<!-- Orientation Support -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- Performance & Input -->
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>

	<!-- 🗺️ Location Permissions -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>USSD+ needs your location to automatically detect your country and show relevant USSD codes.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>USSD+ needs your location to automatically detect your country and show relevant USSD codes even when the app is active.</string>

	<!-- 🔔 Notification Permissions -->
	<key>NSUserNotificationsUsageDescription</key>
	<string>USSD+ would like to send you notifications about important USSD codes and updates.</string>

	<!-- 📷 Camera (for SDK references) -->
	<key>NSCameraUsageDescription</key>
	<string>This app may request camera access if needed for scanning or visual features.</string>

	<!-- 🎤 Microphone (for SDK references) -->
	<key>NSMicrophoneUsageDescription</key>
	<string>This app may request microphone access for audio-related SDK features.</string>

	<!-- 🖼️ Photo Library -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>This app may access your photo library for sharing or profile purposes.</string>

	<!-- 📱 Device Identifier (Ad tracking) -->
	<key>NSUserTrackingUsageDescription</key>
	<string>USSD+ uses your device identifier to show relevant ads and improve user experience.</string>

	<!-- 🌐 Network / HTTP Access -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSExceptionDomains</key>
		<dict>
			<key>ip-api.com</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
			</dict>
		</dict>
	</dict>

	<!-- 📞 URL Schemes for phone calls -->
	<key>LSApplicationQueriesSchemes</key>
	<array>
		<string>tel</string>
	</array>

	<!-- 📡 AdMob Configuration -->
	<key>GADApplicationIdentifier</key>
	<string>ca-app-pub-8528924538237596~9268611851</string>

	<!-- 🧩 Firebase or Ad SDK Dependencies -->
	<key>FirebaseAppDelegateProxyEnabled</key>
	<true/>
	<key>GADIsAdManagerApp</key>
	<false/>
</dict>
</plist>
