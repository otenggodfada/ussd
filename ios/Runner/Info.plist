<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>USSD+</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>ussd_plus</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	<key>LSApplicationQueriesSchemes</key>
	<array>
		<string>tel</string>
	</array>
	<!-- Location Permissions -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>USSD+ needs your location to automatically detect your country and show relevant USSD codes.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>USSD+ needs your location to automatically detect your country and show relevant USSD codes.</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>USSD+ needs your location to automatically detect your country and show relevant USSD codes.</string>
	
	<!-- SMS Permissions -->
	<key>NSContactsUsageDescription</key>
	<string>USSD+ needs access to your contacts to help you manage USSD codes and SMS messages.</string>
	
	<!-- Phone Call Permissions -->
	<key>NSPhoneNumberUsageDescription</key>
	<string>USSD+ needs access to make phone calls for USSD codes and emergency services.</string>
	
	<!-- Notification Permissions -->
	<key>NSUserNotificationsUsageDescription</key>
	<string>USSD+ would like to send you notifications about important USSD codes and updates.</string>
	
	<!-- Background App Refresh -->
	<key>UIBackgroundModes</key>
	<array>
		<string>background-processing</string>
		<string>background-fetch</string>
	</array>
	
	<!-- App Transport Security for HTTP requests -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>ip-api.com</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
				<key>NSExceptionMinimumTLSVersion</key>
				<string>TLSv1.0</string>
			</dict>
		</dict>
	</dict>
	
	<!-- Required for iOS 14+ -->
	<key>NSUserTrackingUsageDescription</key>
	<string>USSD+ uses tracking to provide personalized USSD code recommendations.</string>
	
	<!-- Camera Permission (if needed for QR codes) -->
	<key>NSCameraUsageDescription</key>
	<string>USSD+ needs camera access to scan QR codes for USSD services.</string>
	
	<!-- Photo Library Permission -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>USSD+ needs access to your photo library to save and share USSD codes.</string>
	
	<!-- Microphone Permission (if needed for voice features) -->
	<key>NSMicrophoneUsageDescription</key>
	<string>USSD+ needs microphone access for voice-activated USSD code dialing.</string>
	
	<!-- AdMob App ID -->
	<key>GADApplicationIdentifier</key>
	<string>ca-app-pub-8528924538237596~9268611851</string>
</dict>
</plist>
